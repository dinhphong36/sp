<form class="mt-5 p-4 rounded shadow bg-white" method="POST" action="/admin/showUser/{{User._id}}/edited" style="max-width: 600px; margin: auto;">
    <h4 class="mb-4 text-center text-primary">
        <i class="fas fa-user-edit me-2"></i>Chỉnh sửa thông tin người dùng
    </h4>

    <div class="mb-3">
        <label for="username" class="form-label"><i class="fas fa-user me-2"></i>Username</label>
        <input type="text" class="form-control" id="username" name="username" value="{{User.username}}" required>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label"><i class="fas fa-lock me-2"></i>Password</label>
        <input type="text" class="form-control" id="password" name="password" value="{{User.password}}" required>
    </div>

    <div class="mb-3">
        <label for="email" class="form-label"><i class="fas fa-envelope me-2"></i>Email</label>
        <input type="email" class="form-control" id="email" name="email" value="{{User.email}}" required>
    </div>

    <div class="mb-3">
        <label for="sdt" class="form-label"><i class="fas fa-phone me-2"></i>SĐT</label>
        <input type="text" class="form-control" id="sdt" name="sdt" value="{{User.sdt}}" required>
    </div>

    <div class="mb-4">
        <label for="role" class="form-label"><i class="fas fa-user-tag me-2"></i>Vai trò (role)</label>
        <input type="text" class="form-control" id="role" name="role" value="{{User.role}}" required>
    </div>

    <!-- Nút hành động -->
    <div class="d-flex justify-content-between">
        <a href="/admin/showUser" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay về
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>Lưu thay đổi
        </button>
    </div>
</form>
