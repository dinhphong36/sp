<form class="mt-5 p-4 rounded shadow bg-white" method="POST" action="/admin/showUser/{{User._id}}/deleteUser?_method=DELETE" style="max-width: 600px; margin: auto;">
    <h4 class="mb-4 text-center text-danger">
        <i class="fas fa-user-times me-2"></i>Xác nhận xóa người dùng
    </h4>

    <div class="mb-3">
        <label for="username" class="form-label"><i class="fas fa-user me-2"></i>Username</label>
        <input type="text" class="form-control" id="username" value="{{User.username}}" disabled>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label"><i class="fas fa-lock me-2"></i>Password</label>
        <input type="text" class="form-control" id="password" value="{{User.password}}" disabled>
    </div>

    <div class="mb-3">
        <label for="email" class="form-label"><i class="fas fa-envelope me-2"></i>Email</label>
        <input type="text" class="form-control" id="email" value="{{User.email}}" disabled>
    </div>

    <div class="mb-3">
        <label for="sdt" class="form-label"><i class="fas fa-phone me-2"></i>SĐT</label>
        <input type="text" class="form-control" id="sdt" value="{{User.sdt}}" disabled>
    </div>

    <div class="mb-4">
        <label for="role" class="form-label"><i class="fas fa-user-tag me-2"></i>Role</label>
        <input type="text" class="form-control" id="role" value="{{User.role}}" disabled>
    </div>

    <div class="alert alert-warning text-center fw-bold">
        <i class="fas fa-exclamation-triangle me-2"></i>Bạn có chắc chắn muốn xóa người dùng này?
    </div>

    <div class="d-flex justify-content-between">
        <a href="/admin/showUser" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Xóa người dùng
        </button>
    </div>
</form>
