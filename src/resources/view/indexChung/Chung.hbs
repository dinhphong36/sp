<div class="row">
{{#each mit}}
  <div class="col-lg-3 col-md-6 col-sm-6">
    <figure class="card card-product-grid">
      <div class="img-wrap">
        <a href="/{{this._id}}"><img width="100%" height="240" src="{{this.image}}" alt=""></a>
      </div>
      <figcaption class="info-wrap border-top" style="text-align:center;">
        <a href="/{{this._id}}"><p class="title mb-2">{{this.name}}</p></a>
        <div class="price-wrap">
          <span class="price" style="color:red;">{{this.price}}</span>
        </div>
        <a href="/{{this._id}}" class="btn btn-primary mt-5" style="display:inline-block;">Xem sản phẩm</a>
      </figcaption>
    </figure>
  </div>
{{/each}}
</div>
